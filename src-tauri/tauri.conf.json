{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "yet-another-pos",
	"version": "0.1.0",
	"identifier": "com.yet-another-pos.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "yet-another-pos",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"migrations/*"
		]
	},
	"plugins": {
		"sql": {
			"preload": [
				"sqlite:database.db"
			]
		}
	}
}